<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane stylesheets="@leaderboardStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="home.LeaderboardController">
    <children>
        <BorderPane prefWidth="600.0" prefHeight="400.0">
            <top>
                <HBox fx:id="backbutton" styleClass="header" spacing="10.0" alignment="CENTER_LEFT" style="-fx-padding: 10px;">
                    <Button onAction="#gotoHome" styleClass="back-button" text="ï " style="-fx-font-size: 18px;" />
                    <Label styleClass="header-text" text="Leaderboard" style="-fx-font-size: 24px; -fx-text-fill: black;" />
                </HBox>
            </top>
            <center>
                <TableView fx:id="leaderboardTable" prefWidth="600.0" prefHeight="400.0">
                    <columns>
                        <TableColumn fx:id="rankColumn" text="Rank" prefWidth="75.0" />
                        <TableColumn fx:id="usernameColumn" text="Username" prefWidth="250.0" />
                        <TableColumn fx:id="trophiesColumn" text="Trophies" prefWidth="150.0" />
                        <TableColumn fx:id="goldsColumn" text="Gold" prefWidth="125.0" />
                    </columns>
                </TableView>
            </center>
        </BorderPane>
    </children>
</StackPane>
