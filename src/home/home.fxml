                                    <VBox prefHeight="200.0" prefWidth="100.0" styleClass="game-mode-btn">
                                       <children>
                                          <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="game-mode-btn-semi-title" text="Adventure" />
