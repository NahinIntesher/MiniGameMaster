<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" styleClass="root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofx.CalculatorController">
    <TextField fx:id="display" editable="false" styleClass="display" />
    <GridPane hgap="10" styleClass="grid" vgap="10">
        <!-- Row 1 -->
        <Button onAction="#handleNumberClick" styleClass="button" text="7" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button onAction="#handleNumberClick" styleClass="button" text="8" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Button onAction="#handleNumberClick" styleClass="button" text="9" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <Button onAction="#handleOperatorClick" styleClass="operator-button" text="/" GridPane.columnIndex="3" GridPane.rowIndex="0" />

        <!-- Row 2 -->
        <Button onAction="#handleNumberClick" styleClass="button" text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button onAction="#handleNumberClick" styleClass="button" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button onAction="#handleNumberClick" styleClass="button" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Button onAction="#handleOperatorClick" styleClass="operator-button" text="*" GridPane.columnIndex="3" GridPane.rowIndex="1" />

        <!-- Row 3 -->
        <Button onAction="#handleNumberClick" styleClass="button" text="1" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button onAction="#handleNumberClick" styleClass="button" text="2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button onAction="#handleNumberClick" styleClass="button" text="3" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <Button onAction="#handleOperatorClick" styleClass="operator-button" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" />

        <!-- Row 4 -->
        <Button onAction="#handleNumberClick" styleClass="button" text="0" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Button onAction="#handleClear" styleClass="clear-button" text="AD" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button onAction="#handleOperatorClick" styleClass="equal-button" text="=" GridPane.columnIndex="2" GridPane.rowIndex="3" />
        <Button onAction="#handleOperatorClick" styleClass="operator-button" text="+" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</VBox>
