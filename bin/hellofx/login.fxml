<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" prefWidth="1000" prefHeight="600" styleClass="root-pane">
    <HBox spacing="0" alignment="CENTER" maxWidth="1000" maxHeight="600" styleClass="form-pane">
        <!-- Left Section -->
        <VBox alignment="CENTER" prefWidth="600" styleClass="left-section">
            <Label text="MINI GAME" styleClass="title-mini" />
            <Label text="MASTER" styleClass="title-master" />
        </VBox>

        <!-- Right Section -->
        <VBox alignment="CENTER" spacing="20" prefWidth="600" styleClass="right-section">
            <Label text="Login" styleClass="title-login" />
            <VBox spacing="10" alignment="CENTER_LEFT" maxWidth="400">
                <Label text="Username" styleClass="label-text" />
                <TextField promptText="Enter your username" styleClass="input-field" />
                <Label text="Password" styleClass="label-text" />
                <PasswordField promptText="Enter your password" styleClass="input-field" />
            </VBox>
            <Button text="Login" styleClass="login-button" />
            <Button text="Create New Account" styleClass="create-account-button" />
        </VBox>
    </HBox>
</StackPane>
