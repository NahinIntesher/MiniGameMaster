<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane styleClass="root"
     xmlns="http://javafx.com/javafx/23.0.1" stylesheets="@homeStyle.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="home.LeaderboardController">
    <children>
        <BorderPane prefWidth="600.0" prefHeight="400.0">
            <top>
                <HBox fx:id="backbutton" styleClass="header">
                    <Button onAction="#gotoHome" styleClass="back-button" text="" style="-fx-font-size: 18px;" />
                    <Label styleClass="header-text" text="Leaderboard" style="-fx-font-size: 24px; -fx-text-fill: black;" />
                </HBox>
            </top>
            <center>
                <StackPane alignment="CENTER">
                    <TableView fx:id="leaderboardTable" prefWidth="800.0" prefHeight="400.0 ">
                        <columns>
                            <TableColumn fx:id="rankColumn" text="Rank" prefWidth="125.0" />
                            <TableColumn fx:id="usernameColumn" text="Username" prefWidth="350.0" />
                            <TableColumn fx:id="trophiesColumn" text="Trophies" prefWidth="250.0" />
                            <TableColumn fx:id="goldsColumn" text="Gold" prefWidth="225.0" />
                        </columns>
                    </TableView>
                </StackPane>
            </center>
        </BorderPane>
    </children>
</StackPane>
