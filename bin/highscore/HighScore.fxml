<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1200.0" 
            stylesheets="@highscoreStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="highscore.HighScoreController">

    
    <!-- Main Content Container -->
    <BorderPane styleClass="main-container">
        <!-- Header Section -->
        <top>
            <HBox styleClass="header" fx:id='backbutton'>
                <Button onAction="#gotoHome" styleClass="back-button" text=""/> 
                <Label styleClass="header-text" text="High Score Beating Mode"/>
            </HBox>
        </top>
        
        <center>
            <HBox spacing="20" alignment="CENTER">
                <!-- Left Side - Game Selection -->
                <VBox styleClass="left-panel">
                    <GridPane styleClass="game-grid" hgap="10" vgap="10" fx:id="gameGrid">
                        
                    </GridPane>
                </VBox>
                
                <!-- Right Side - Game Details -->
                <VBox styleClass="game-details">
                    <!-- Tetris Preview -->
                    <HBox styleClass="tetris-preview">
                        <ImageView styleClass="tetris-pieces" fx:id="singleGameCoverPicture"/>
                    </HBox>
                    
                    <!-- Game Title and Stats -->
                    <Label styleClass="game-title" fx:id="singleGameName"/>
                    <Label styleClass="player-count" fx:id="singleGamePlayedBy"/>
                    
                    <!-- Play Button -->
                    <Button onAction="#playGame" text="Play" styleClass="play-button" />
                    
                    <!-- High Scores Section -->
                    <VBox styleClass="high-scores">
                        <Label text="High Scores" styleClass="section-title"/>
                        
                        <!-- Score Tabs -->
                        <HBox styleClass="score-tabs">
                            <Button text="Monthly" styleClass="play-button" onAction="#showMonthlyScore"/>
                            <Button text="All Time" styleClass="play-button" onAction="#showAllTimeScore"/>
                        </HBox>

                        
                        <!-- Monthly Timer -->
                        <Label text="Monthly high score will reset in" styleClass="reset-text"/>
                        <Label text="28d 11h 32m" styleClass="timer" />
                        
                        <!-- Leaderboard -->
                        <ScrollPane styleClass="scroll-pane" fitToWidth="true" prefHeight="300">
                            <VBox styleClass="leaderboard" fx:id="leaderboard">
                                <!-- <HBox styleClass="score-entry">
                                    <Label text="1" styleClass="rank"/>
                                    <Label text="Jayed" styleClass="player-name"/>
                                    <ImageView styleClass="trophy-icon"/>
                                    <Label text="1250" styleClass="score"/>
                                    <Label text="203" styleClass="all-time-score"/>
                                </HBox> -->
                                <!-- Add more score entries as needed -->
                            </VBox>
                        </ScrollPane>
                    </VBox>

                </VBox>
            </HBox>
        </center>
    </BorderPane>
</StackPane>